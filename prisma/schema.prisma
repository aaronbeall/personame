generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Authentication
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  personames    Personame[]
  results       QuizResult[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Personame (Quiz)
model Personame {
  id          String   @id @default(cuid())
  title       String
  description String?
  slug        String   @unique
  status      PersonameStatus @default(DRAFT)
  visibility  PersonameVisibility @default(PRIVATE)
  
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  
  metrics     Metric[]
  archetypes  Archetype[]
  pages       QuizPage[]
  results     QuizResult[]
  
  views       Int      @default(0)
  completions Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  @@index([creatorId])
  @@index([status])
  @@index([visibility])
  @@index([publishedAt])
}

enum PersonameStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

enum PersonameVisibility {
  PRIVATE
  PUBLIC
}

// Metrics (e.g., Openness, Conscientiousness)
model Metric {
  id          String   @id @default(cuid())
  name        String
  description String?
  minLabel    String?  // Label for minimum value (e.g., "Introverted")
  maxLabel    String?  // Label for maximum value (e.g., "Extroverted")
  order       Int      @default(0)
  
  personameId String
  personame   Personame @relation(fields: [personameId], references: [id], onDelete: Cascade)
  
  archetypeMetrics ArchetypeMetric[]
  answerWeights    AnswerWeight[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([personameId])
}

// Archetypes (personality types)
model Archetype {
  id          String   @id @default(cuid())
  name        String
  description String?
  emoji       String?
  color       String?  // Hex color
  imageUrl    String?
  order       Int      @default(0)
  
  personameId String
  personame   Personame @relation(fields: [personameId], references: [id], onDelete: Cascade)
  
  metrics     ArchetypeMetric[]
  results     QuizResult[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([personameId])
}

// Archetype target values for each metric
model ArchetypeMetric {
  id           String   @id @default(cuid())
  targetValue  Float    // Target value for this metric (0-100)
  relevance    Float    @default(1.0) // How important this metric is (0-1)
  
  archetypeId  String
  archetype    Archetype @relation(fields: [archetypeId], references: [id], onDelete: Cascade)
  
  metricId     String
  metric       Metric   @relation(fields: [metricId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([archetypeId, metricId])
  @@index([archetypeId])
  @@index([metricId])
}

// Quiz Pages
model QuizPage {
  id          String   @id @default(cuid())
  title       String?
  description String?
  order       Int      @default(0)
  
  personameId String
  personame   Personame @relation(fields: [personameId], references: [id], onDelete: Cascade)
  
  questions   Question[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([personameId])
}

// Questions
model Question {
  id          String   @id @default(cuid())
  text        String
  type        QuestionType
  order       Int      @default(0)
  required    Boolean  @default(true)
  
  pageId      String
  page        QuizPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  answers     Answer[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pageId])
}

enum QuestionType {
  MULTIPLE_CHOICE
  SLIDER
  SCALE
}

// Answer options for questions
model Answer {
  id          String   @id @default(cuid())
  text        String
  order       Int      @default(0)
  
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  weights     AnswerWeight[]
  userAnswers UserAnswer[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([questionId])
}

// How each answer affects metrics
model AnswerWeight {
  id       String @id @default(cuid())
  value    Float  // Points added to metric (-100 to +100)
  
  answerId String
  answer   Answer @relation(fields: [answerId], references: [id], onDelete: Cascade)
  
  metricId String
  metric   Metric @relation(fields: [metricId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([answerId, metricId])
  @@index([answerId])
  @@index([metricId])
}

// Quiz Results
model QuizResult {
  id            String   @id @default(cuid())
  
  personameId   String
  personame     Personame @relation(fields: [personameId], references: [id], onDelete: Cascade)
  
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  archetypeId   String
  archetype     Archetype @relation(fields: [archetypeId], references: [id], onDelete: Cascade)
  
  answers       UserAnswer[]
  metricScores  MetricScore[]
  
  completedAt   DateTime @default(now())
  
  @@index([personameId])
  @@index([userId])
  @@index([archetypeId])
  @@index([completedAt])
}

// User's answer to a question
model UserAnswer {
  id       String @id @default(cuid())
  
  resultId String
  result   QuizResult @relation(fields: [resultId], references: [id], onDelete: Cascade)
  
  answerId String
  answer   Answer @relation(fields: [answerId], references: [id], onDelete: Cascade)
  
  value    Float? // For slider/scale questions
  
  createdAt DateTime @default(now())

  @@index([resultId])
  @@index([answerId])
}

// Final metric scores for a result
model MetricScore {
  id       String @id @default(cuid())
  score    Float  // Final calculated score (0-100)
  
  resultId String
  result   QuizResult @relation(fields: [resultId], references: [id], onDelete: Cascade)
  
  metricName String // Stored for historical data
  
  createdAt DateTime @default(now())

  @@index([resultId])
}
